{
  "enabled": true,
  "mode": "warning",
  "log_file": "~/.claude/validation.log",

  "file_validation": {
    "enabled": true,
    "path_validation": {
      "enabled": true,
      "protected_directories": [
        "/etc",
        "/usr",
        "/System",
        "/Windows/System32",
        "/.git/objects",
        "/.git/hooks",
        "/Applications",
        "/Library/System"
      ],
      "protected_files": [
        ".git/config",
        ".ssh/id_rsa",
        ".ssh/id_dsa",
        ".ssh/id_ecdsa",
        ".ssh/id_ed25519",
        ".gnupg/",
        ".aws/credentials",
        ".npmrc",
        ".pypirc",
        ".netrc",
        ".bashrc",
        ".zshrc"
      ],
      "max_path_depth": 20,
      "allow_hidden_files": true,
      "allow_symlinks": false
    },
    "content_validation": {
      "enabled": true,
      "max_file_size": 10485760,
      "binary_file_action": "warn"
    }
  },

  "security_validation": {
    "enabled": true,
    "secret_scanning": {
      "enabled": true,
      "scan_for_secrets": true,
      "block_on_secrets": false,
      "allowed_domains": [],
      "blocked_domains": [
        "malware.com",
        "phishing.net"
      ]
    },
    "permissions": {
      "enabled": true,
      "policies": {
        "blocked_tools": [],
        "approval_required": [],
        "time_restrictions": {}
      }
    }
  },

  "pattern_validation": {
    "enabled": true,
    "enforce_naming": true,
    "enforce_structure": true,
    "custom_patterns": [
      {
        "pattern": "debugger;",
        "message": "Remove debugger statement",
        "severity": "warning",
        "applies_to": [".js", ".ts"]
      },
      {
        "pattern": "import \\* as",
        "message": "Avoid wildcard imports",
        "severity": "info",
        "applies_to": [".js", ".ts", ".py"]
      },
      {
        "pattern": "TODO(?!:)",
        "message": "TODO should be followed by colon",
        "severity": "info",
        "applies_to": []
      }
    ]
  },

  "command_validation": {
    "enabled": true,
    "block_dangerous": true,
    "suggest_alternatives": true,
    "max_command_length": 5000,
    "allowed_commands": [],
    "blocked_commands": [
      "format",
      "fdisk",
      "mkfs",
      "parted"
    ]
  },

  "tool_specific": {
    "Write": {
      "validators": ["file", "security", "pattern"]
    },
    "Edit": {
      "validators": ["file", "security", "pattern"]
    },
    "MultiEdit": {
      "validators": ["file", "security", "pattern"]
    },
    "Bash": {
      "validators": ["command", "security"]
    },
    "WebFetch": {
      "validators": ["security"]
    },
    "WebSearch": {
      "validators": ["security"]
    }
  }
}